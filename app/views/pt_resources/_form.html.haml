//@param material [Material] an instance of Material to render the form for.
.container.has-text-justified
  = simple_form_for pt_resource,  html: { class: "form-horizontal center"},  input_html: {  } do  |f|

    = f.input :category, collection: PtResource::CATEGORY_LIST, prompt: "Select Category"
    = f.input :menu_id, collection: PtResource::MENU_LIST, prompt: "Select Menu"
    = f.input :title , placeholder: "Title", label: 'Title'
    = f.input :body, placeholder: "Body", label: 'Content',:input_html => {:rows => 10}
    = f.input :link, placeholder: "Link", label: 'Link'
    = f.input :active,  as: :boolean, checked_value: true, unchecked_value: false
    = f.input :public,  as: :boolean, checked_value: true, unchecked_value: false
    .button-padding.txt_center
      = link_to "Back to index",  pt_resources_path, class: "btn btn-default"
      = f.submit "Submit", class: "btn btn-info"
