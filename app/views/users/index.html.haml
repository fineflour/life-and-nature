.grid_100.has-text-justified.is-margin-top-2
  .container
    = render partial: "/layouts/admin_menu" 
    .panel-heading
      = link_to "Add a user", new_user_path, class: "btn btn-info"
    .table-responsive
      %table#article.table.table-bordered.table-hover
        %thead
          %tr
            %th Name
            %th Role
            %th Email
            %th Created At
            %th Action
        %tbody
          - @users.each do |a|
            %tr{:id => "users#{a.id}"}
              %td
                = link_to a.fullname, edit_user_path(a)
              %td
                = a.role
              %td
                = a.email
              %td
                = a.updated_at.strftime("%m/%d/%Y")
                %td
                  = link_to "Show",user_path(a)
                  |
                  \#{link_to "Edit", edit_user_path(a)}
                  |
                  \#{link_to "Delete", user_path(a), :method => :DELETE, data: {confirm: "Are you sure to delete?"}}
                  
