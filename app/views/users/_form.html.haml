//@param material [Material] an instance of Material to render the form for.
.container.has-text-justified
  = simple_form_for user,  html: { class: "form-horizontal center"},  input_html: {  } do  |f|

    = f.input :fullname, placeholder: "Full Name", label: 'Full Name'
    = f.input :email, placeholder: "Body", label: 'Email',:input_html => {:rows => 10}
    = f.input :password, placeholder: "Password", label: 'Password', :type => "text"
    = f.input :dob, placeholder: "Date of Birth", label: 'Date of Birth'
    = f.input :phone, placeholder: "Phone Number", label: 'Phone'
    = f.input :role, collection: User::ROLES, prompt: "Select role"
    .button-padding.txt_center
      = link_to "Back to index",  users_path, class: "btn btn-default"
      = f.submit "Submit", class: "btn btn-info"
