//@param material [Material] an instance of Material to render the form for.
.container
  = simple_form_for user,  html: { class: "form-horizontal center"},  input_html: {  } do  |f|
    .row
      .col-lg-6
        .form-group
          = f.input :fullname, placeholder: "Full Name", label: 'Full Name'
      .col-lg-6
        .form-group
          = f.input :email, placeholder: "Body", label: 'Email'
      .col-lg-6
        .form-group
          = f.input :password, placeholder: "Password", :value => @user.password,  label: 'Password'
      .col-lg-6
        .form-group
          = f.input :dob, placeholder: "Date of Birth", label: 'Date of Birth'
      .col-lg-6
        .form-group
          = f.input :phone, placeholder: "Phone Number", label: 'Phone'
      .col-lg-6
        .form-group
          = f.input :role, collection: User::ROLES, prompt: "Select user role", label: false
    .row
      .col-lg-12
        .form-group
          = f.submit "Submit", class: "btn btn-info"
