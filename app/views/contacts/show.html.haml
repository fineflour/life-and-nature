= render partial: "/layouts/admin_menu" 
-if user_signed_in? && current_user[:role]=="admin"  
  %section.services.section
    .container
      .row
        .col-lg-12
          .section-title.tpadding-2
            %h2
              Contact Us
            %img{src: "/assets/section-img.png", alt: "#"}

      .row
        .col-lg-12
          = link_to "go back to list",'javascript:history.back()', class: "btn btn-outline-secondary btn-sm"
          %hr
      .row
        .col-lg-6
          .form-group
            %h3
              User Name:
              = @contact_list.name
        .col-lg-6
          .form-group

            %h3
              EMAIL:
              = @contact_list.email
        .col-lg-6
          .form-group
            %h3
              Phone:
              = @contact_list.phone
        .col-lg-6
          .form-group
            %h3
              Subject:
              = @contact_list.subject.html_safe

        .col-lg-12
          .form-group
            %p
              = @contact_list.message.html_safe

        .col-lg-12
          .form-group
            %p
              = @contact_list.message.html_safe

          = link_to "go back to list",'javascript:history.back()', class: "btn btn-outline-secondary btn-sm"
